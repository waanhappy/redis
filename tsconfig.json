{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2018",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "sourceMap": true,
    "lib": ["es7"],
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src": ["src"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
